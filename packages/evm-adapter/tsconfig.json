{
  "exclude": ["dist", "test", "node_modules"],
  "include": ["."],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "types": ["chai", "node"],
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./"
  }
}
